{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "pretty": true,
    "incremental": true,
    "removeComments": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "dist/@types",
    "target": "es2024",
    "module": "es2022",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ],
    "paths": {
      "@*": [
        "./*",
        "./src/*"
      ],
      "@pages": [
        "./src/pages"
      ],
      "@components": [
        "./src/components"
      ],
      "@stores": [
        "./src/stores"
      ],
      "@schema": [
        "./src/schema"
      ],
      "@template": [
        "./src/templates"
      ]
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src/**/*",
  ],
}